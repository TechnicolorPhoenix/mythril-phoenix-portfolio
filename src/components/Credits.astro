---
// src/components/Credits.astro
const credits = [
  { year: '2023', role: 'Lead Programmer', project: 'Unannounced Indie Title', company: 'Studio X' },
  { year: '2022', role: 'Full-stack Dev', project: 'Asset Pipeline Tool', company: 'Internal Project' },
];
---
<section class="py-20 px-4 max-w-5xl mx-auto">
  <h2 class="text-3xl font-bold text-white mb-10">Select Credits</h2>
  <div class="space-y-4">
    {credits.map(item => (
      <div class="grid grid-cols-4 border-b border-slate-800 py-4 hover:bg-slate-900/50 transition-colors px-4">
        <span class="text-slate-500 font-mono">{item.year}</span>
        <span class="text-white font-bold">{item.role}</span>
        <span class="text-blue-400">{item.project}</span>
        <span class="text-slate-400 text-right">{item.company}</span>
      </div>
    ))}
  </div>
</section>
